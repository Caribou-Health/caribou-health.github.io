rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection — authenticated users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Care plans — users can read/write their own care plans
    match /carePlans/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Progress tracking — users can read/write their own progress
    match /progress/{progressId} {
      allow read, write: if request.auth != null
        && resource == null || resource.data.userId == request.auth.uid;
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;
    }

    // Subscriptions — users can read their own, only backend can write
    match /subscriptions/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only Cloud Functions can write subscriptions
    }

    // Promo codes — anyone authenticated can read (to validate), only admin can write
    match /promoCodes/{codeId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin Cloud Functions can write
    }

    // Admin collection — only admin users can access
    match /admin/{document=**} {
      allow read, write: if request.auth != null
        && request.auth.token.email in ['caleigh@caribouhealth.ca', 'kanny@caribouhealth.ca'];
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
